<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etAddName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add name"/>

    <EditText
        android:id="@+id/etAddLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add last name"/>

    <EditText
        android:id="@+id/etAddAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add Address"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add image"
        android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnAddImageFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add image from Gallery"
            android:textAllCaps="false"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivImagePreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btnAddContact"
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>